<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <stroke android:width="0.5dp" android:color="#ffffff" />

            <solid android:color="#FFFFFF" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:left="-1.6dp">

                <shape>
                    <stroke android:width="0.8dp" android:color="#ffffff" />

                    <solid android:color="#F47183" />

                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
                </shape>
            </item>

        </layer-list>

    </item>


</selector>