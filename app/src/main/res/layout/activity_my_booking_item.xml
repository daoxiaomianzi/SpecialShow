<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/all_mybooking"
    android:background="@color/color_ffffff"
     >
     
     	<View 
   	    android:layout_width="match_parent"
   	    android:background="@color/color_ededed"
   	    android:layout_height="@dimen/ling_0.8"
   	    />
    <LinearLayout 
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_size_26px"
        android:paddingRight="@dimen/text_size_26px"
        android:orientation="vertical"
        >
          
        <TextView 
            android:id="@+id/mybooking_shop_name"
            android:paddingTop="@dimen/text_size_26px"
            android:paddingBottom="@dimen/text_size_26px"
            android:paddingLeft="@dimen/text_size_8px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约门店名称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_28px"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ededed"
            />
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	        android:paddingTop="@dimen/text_size_16px"
            android:paddingBottom="@dimen/text_size_16px"
            android:paddingLeft="@dimen/text_size_8px"
   	    >
   	    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约服务:"
            android:textColor="#777777"
            android:textSize="@dimen/text_size_26px"
   	        />
   	    <TextView 
   	        android:id="@+id/mybooking_service_name"
            android:paddingLeft="@dimen/text_size_10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务名称"
            android:textColor="#777777"
            android:textSize="@dimen/text_size_26px"
   	        />
   	</LinearLayout>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
            android:paddingBottom="@dimen/text_size_16px"
            android:paddingLeft="@dimen/text_size_8px"
   	    >
   	    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手艺人:"
            android:textColor="#777777"
            android:textSize="@dimen/text_size_26px"
   	        />
   	    <TextView 
   	        android:id="@+id/mybooking_staff_name"
            android:paddingLeft="@dimen/text_size_10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手艺人名字"
            android:textColor="#777777"
            android:textSize="@dimen/text_size_26px"
   	        />
   	</LinearLayout>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
            android:paddingBottom="@dimen/text_size_16px"
            android:paddingLeft="@dimen/text_size_8px"
   	    >
   	    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约时间:"
            android:textColor="#777777"
            android:textSize="@dimen/text_size_26px"
   	        />
   	    <TextView 
   	        android:id="@+id/mybooking_appoinment_time"
            android:paddingLeft="@dimen/text_size_10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周五  01.08 20:00"
            android:textColor="#777777"
            android:textSize="@dimen/text_size_26px"
   	        />
   	</LinearLayout>
   	<View 
   	    android:layout_width="match_parent"
   	    android:layout_height="1dp"
   	    android:background="@color/color_ededed"
   	    />
   	<RelativeLayout 
   	    android:paddingTop="@dimen/text_size_10px"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    >
   	    <TextView 
   	        android:id="@+id/mybooking_add_time"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	       android:text="2015.01.12 15:30"
   	       android:layout_marginRight="@dimen/text_size_8px"
   	       android:layout_alignParentRight="true"
   	       android:textColor="#777777"
   	       android:textSize="@dimen/text_size_24px"
   	        />
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_toLeftOf="@id/mybooking_add_time"
   	        android:textColor="#777777"
   	        android:layout_marginRight="@dimen/text_size_10px"
   	        android:text="提交时间:"
   	        android:textSize="@dimen/text_size_24px"
   	        />
   	</RelativeLayout>
   	  </LinearLayout>
   	  	<LinearLayout 
   	  	    android:layout_below="@id/ll_all"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical"
   	    >
   	<View 
   	    android:layout_marginTop="5dp"
   	    android:layout_width="match_parent"
   	    android:background="@color/color_ededed"
   	    android:layout_height="@dimen/ling_0.8"
   	    />
   	<View 
   	    android:layout_width="match_parent"
   	    android:background="@color/app_bg"
   	    android:layout_height="@dimen/text_size_16px"
   	    />
   	</LinearLayout>
 
        
  
        <com.show.specialshow.view.RotateTextView
        android:visibility="visible"
        android:id="@+id/mybooking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10px" />

</RelativeLayout>
