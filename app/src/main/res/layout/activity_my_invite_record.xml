<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".activity.MyInviteRecordActivity" >

    <include layout="@layout/view_common_head" />

    <ImageView style="@style/split_iv_horizontal" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/text_size_16px"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="被邀请人"
            android:textColor="@color/color_656565"
            android:textSize="@dimen/text_size_26px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/color_656565"
            android:textSize="@dimen/text_size_26px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ems="3"
            android:gravity="right"
            android:text="奖励"
            android:textColor="@color/color_656565"
            android:textSize="@dimen/text_size_26px" />
    </LinearLayout>

    <ImageView style="@style/split_iv_horizontal"
        android:background="@color/color_ededed"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/invite_no_record_show_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="暂无邀请"
            android:textColor="@color/color_656565"
            android:textSize="@dimen/text_size_28px"
            android:visibility="gone" />

        <ListView
            android:id="@+id/invite_record_list_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@color/color_ededed"
            android:dividerHeight="1dp"
            android:scrollbars="none" >
        </ListView>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ling_0.8"
        android:background="@color/color_ededed"></View>
</LinearLayout>