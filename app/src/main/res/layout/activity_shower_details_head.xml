                android:layout_centerVertical="true"
                android:id="@+id/shower_details_crafstman_roundImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_6px"
                android:layout_marginTop="@dimen/text_size_4px"
                android:layout_alignTop="@id/shower_details_crafstman_roundImageView"
                android:id="@+id/shower_detaisls_crafstman_nickname"
                android:text="@string/nickname"
                android:layout_toRightOf="@id/shower_details_crafstman_roundImageView"
                android:textSize="@dimen/text_size_24px"
                android:textColor="@color/color_999999"
                />

            
            <TextView
                android:layout_marginLeft="@dimen/text_size_3px"
                android:id="@+id/shower_detaisls_crafstman_nickname_tv"
