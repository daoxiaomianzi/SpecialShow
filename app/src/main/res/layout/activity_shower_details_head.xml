<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >


    <RelativeLayout
        android:background="@color/color_ffffff"
        android:layout_width="fill_parent"
        android:paddingBottom="@dimen/text_size_16px"
        android:layout_height="215dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:background="@drawable/bg_shower" >

            <TextView
                android:id="@+id/shower_details_often_in_tv"
                style="@style/user_info_tv"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/text_size_26px"
                android:layout_marginBottom="@dimen/text_size_8px"
                android:textSize="@dimen/text_size_24px"
                android:textColor="@color/color_ffffff"
                android:singleLine="true"
                android:maxEms="6"
                android:text="上海"
                />
            <TextView
                android:id="@+id/shower_details_often_in"
                android:layout_marginRight="@dimen/text_size_10px"
                android:textSize="@dimen/text_size_24px"
                android:textColor="@color/color_ffffff"
                android:layout_alignBottom="@id/shower_details_often_in_tv"
                android:layout_toLeftOf="@id/shower_details_often_in_tv"
                style="@style/user_info_tv"
                android:text="@string/often_in"
                />
            <TextView
                android:id="@+id/shower_details_nickname_tv"
                android:textColor="@color/color_ffffff"
                android:layout_alignBottom="@id/shower_details_often_in_tv"
                style="@style/user_info_tv"
                android:text="js造型"
                android:layout_marginLeft="85dp"
                />

            <include
                android:id="@+id/shower_details_head_2"
                layout="@layout/view_common_head"
                />

	</RelativeLayout>
        <com.show.specialshow.utils.RoundImageView
            android:id="@+id/shower_details_roundImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/text_size_26px"
             />
        <LinearLayout
            android:layout_alignBottom="@id/shower_details_roundImageView"
android:orientation="horizontal"
            android:layout_toRightOf="@id/shower_details_roundImageView"
android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shower_details_sex_age"
            style="@style/user_info_tv"
        android:gravity="center"
            android:text="dd"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_dynami_attention_selecter"
            android:paddingLeft="@dimen/text_size_10px"
            android:paddingRight="@dimen/text_size_10px"
            android:textSize="@dimen/text_size_20px"
            android:textColor="@color/white"
            android:minEms="3"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/shower_details_xinzuo"
            style="@style/user_info_tv"
            android:layout_alignTop="@id/shower_details_sex_age"
            android:layout_alignBottom="@id/shower_details_sex_age"
            android:layout_toRightOf="@id/shower_details_sex_age"
            android:gravity="center"
            android:minEms="3"
            android:text="dd"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/text_size_24px" />
        </LinearLayout>



        <TextView
            android:id="@+id/shower_details_attention_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shower_details_roundImageView"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/text_size_24px"
            android:background="@drawable/bg_dynami_attention_selecter"
            android:clickable="true"
            android:gravity="center"
            android:minEms="3"
            android:onClick="onClick"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:text="关注"
            android:textColor="@drawable/text_attention_color_check_selector"
            android:textSize="@dimen/text_size_22px" />
        <TextView
            android:onClick="onClick"
            android:clickable="true"
            android:id="@+id/shower_details_add_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shower_details_roundImageView"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/text_size_24px"
            android:background="@drawable/bg_dynami_attention_selecter"
            android:layout_toLeftOf="@id/shower_details_attention_btn"
            android:gravity="center"
            android:minEms="3"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:text="加好友"
            android:textColor="@drawable/text_attention_color_check_selector"
            android:textSize="@dimen/text_size_22px" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/shower_details_content"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/imaginary_line_shape"
            android:layerType="software" />

    </LinearLayout>


    <LinearLayout
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/text_size_26px"
        android:paddingRight="@dimen/text_size_26px"
        android:paddingTop="@dimen/text_size_16px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personalized_signature"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_26px" />

        <TextView
            android:textColor="@color/color_555555"
            android:id="@+id/shower_details_signature_tv"
            style="@style/user_info_tv"
            android:textSize="@dimen/text_size_26px"
            android:layout_marginLeft="@dimen/text_size_8px"
            android:text="鱼柳包里面的鱼柳变咗就唔系" />
    </LinearLayout>
