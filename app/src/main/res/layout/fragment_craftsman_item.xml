<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/craftsman_item_rll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/craftsman_item_rl"
        style="@style/shopList_rll"
        android:layout_height="80dp"
        android:paddingBottom="@dimen/text_size_6px"
        android:paddingTop="@dimen/text_size_3px">

        <com.show.specialshow.utils.RoundImageView
            android:id="@+id/craftsman_item_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/craftsman_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_toRightOf="@id/craftsman_item_iv"
            android:text="嘉里酒店健身中心"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/text_size_26px" />

        <TextView
            android:id="@+id/craftsman_item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_8px"
            android:layout_toRightOf="@id/craftsman_item_name"
            android:gravity="center"
            android:minWidth="@dimen/text_size_90px"
            android:paddingLeft="@dimen/text_size_8px"
            android:paddingRight="@dimen/text_size_8px"
            android:text="21"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_22px" />

        <TextView
            android:id="@+id/craftsman_item_constellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_10px"
            android:layout_toRightOf="@id/craftsman_item_age"
            android:background="@drawable/bg_xingzuo"
            android:drawablePadding="@dimen/text_size_1px"
            android:gravity="center"
            android:minWidth="@dimen/text_size_90px"
            android:paddingLeft="@dimen/text_size_4px"
            android:paddingRight="@dimen/text_size_4px"
            android:text="射手"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_22px" />

        <TextView
            android:id="@+id/craftsman_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="0.24km"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/craftsman_item_attention_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_show_visitor_attention_selector"
            android:gravity="center"
            android:minEms="3"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:text="关注"
            android:textColor="@drawable/text_attention_color_check_selector"
            android:textSize="@dimen/text_size_20px" />

        <TextView
            android:id="@+id/craftsman_item_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_toRightOf="@id/craftsman_item_iv"
            android:background="@drawable/bg_tags"
            android:gravity="center"
            android:minEms="3"
            android:paddingBottom="@dimen/text_size_3px"
            android:paddingLeft="@dimen/text_size_10px"
            android:paddingRight="@dimen/text_size_10px"
            android:paddingTop="@dimen/text_size_3px"
            android:text="美妆"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_20px" />

        <TextView
            android:id="@+id/craftsman_item_store"
            style="@style/user_info_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_toRightOf="@id/craftsman_item_iv"
            android:text="门店:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/craftsman_item_address"
            style="@style/user_info_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_marginRight="@dimen/text_size_8px"
            android:layout_toLeftOf="@id/show_lang_distance"
            android:layout_toRightOf="@id/craftsman_item_store"
            android:drawablePadding="@dimen/text_size_1px"
            android:singleLine="true"
            android:text="上海市"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/text_size_24px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/craftsman_item_rl"
        android:layout_marginLeft="@dimen/text_size_16px"
        android:layout_marginRight="@dimen/text_size_16px"
        android:background="@color/color_ededed" />


</RelativeLayout>
