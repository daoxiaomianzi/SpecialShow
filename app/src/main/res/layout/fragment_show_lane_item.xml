<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:id="@+id/show_lang_item_rll"
        android:clickable="true"
        android:focusable="true"
    android:orientation="vertical" >
    <RelativeLayout
        android:paddingBottom="@dimen/text_size_6px"
        android:paddingTop="@dimen/text_size_3px"
        android:id="@+id/show_lang_item_rl"
                style="@style/shopList_rll"
                android:layout_height="80dp"
                >

                <com.show.specialshow.utils.RoundImageView
                    android:id="@+id/show_lang_item_iv"
                    android:layout_centerVertical="true"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
 />

                <TextView
                    android:textColor="@color/color_555555"
                    android:id="@+id/show_lang_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_16px"
                    android:layout_toRightOf="@id/show_lang_item_iv"
                    android:text="嘉里酒店健身中心"
                    android:textSize="@dimen/text_size_26px" />
                <TextView
                    android:id="@+id/show_lang_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="0.24km"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_24px" />
        <TextView
            android:id="@+id/show_lang_item_xf"
            android:textColor="@color/color_999999"
            style="@style/user_info_tv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="80"
            android:textSize="@dimen/text_size_26px"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/show_lang_item_label_tv"
            android:textSize="@dimen/text_size_20px"
            android:paddingTop="@dimen/text_size_3px"
            android:paddingBottom="@dimen/text_size_3px"
            android:paddingLeft="@dimen/text_size_10px"
            android:paddingRight="@dimen/text_size_10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tags"
            android:layout_toRightOf="@id/show_lang_item_iv"
            android:layout_centerVertical="true"
            android:text="美妆"
            android:minEms="3"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/text_size_16px"
            />

                <GridView
                    android:visibility="gone"
                    android:numColumns="3"
                    android:id="@+id/show_lang_item_label_gv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"  
                  android:listSelector="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_size_16px"
                    android:layout_toRightOf="@id/show_lang_item_iv"
                    android:horizontalSpacing="@dimen/text_size_16px"
                    ></GridView>

