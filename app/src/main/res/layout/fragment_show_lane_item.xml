        <TextView
            android:id="@+id/show_lang_item_address"
            style="@style/user_info_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_marginRight="@dimen/text_size_8px"
            android:layout_toLeftOf="@id/show_lang_distance"
            android:layout_toRightOf="@id/show_lang_item_iv"
            android:drawableLeft="@drawable/icon_address"
            android:drawablePadding="@dimen/text_size_1px"
            android:singleLine="true"
            android:text="上海市"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/show_lang_item_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_toRightOf="@id/show_lang_item_iv"
            android:text="秀卡(8)"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/show_lang_item_ceng_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_size_4px"
            android:layout_marginLeft="@dimen/text_size_36px"
            android:layout_toRightOf="@id/show_lang_item_card_num"
            android:text="蹭卡(8)"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/show_lang_item_moods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_size_4px"
            android:layout_marginLeft="@dimen/text_size_40px"
            android:layout_toRightOf="@id/show_lang_item_ceng_card_num"
            android:drawableLeft="@drawable/icon_moods"
            android:drawablePadding="3dp"
            android:text="1458人气"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/show_lang_item_rl"
        android:layout_marginLeft="@dimen/text_size_16px"
        android:layout_marginRight="@dimen/text_size_16px"
        android:background="@color/color_ededed" />


