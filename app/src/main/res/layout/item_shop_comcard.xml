<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
        android:paddingRight="@dimen/text_size_28px"
         android:paddingLeft="@dimen/text_size_28px"
    android:orientation="vertical" >

    <RelativeLayout
        android:paddingTop="@dimen/text_size_16px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.show.specialshow.utils.RoundImageView
            android:id="@+id/roundImage_shop_comcard"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            imagecontrol:border_thickness="2dp" />
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/roundImage_shop_comcard"
            android:layout_centerVertical="true"
            
            >
        <TextView 
            android:id="@+id/shop_comcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长发万毒花"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/text_size_26px"
            android:layout_marginTop="@dimen/text_size_4px"
            />
        <TextView 
            android:layout_marginTop="@dimen/text_size_8px"
            android:layout_below="@id/shop_comcard_name"
            android:id="@+id/shop_comcard_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.12 15:30"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px"
            />
        <TextView 
            android:id="@+id/shop_comcard_chat"
            android:paddingTop="@dimen/text_size_8px"
            android:paddingBottom="@dimen/text_size_8px"
            android:paddingLeft="@dimen/text_size_24px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="聊天"
            android:drawablePadding="3dp"
            android:textSize="@dimen/text_size_26px"
            android:drawableLeft="@drawable/icon_chat"
            android:textColor="@color/color_F47183"
            />
<!--             android:background="@drawable/bg_order_privilege" -->
        </RelativeLayout>
    </RelativeLayout>
    <com.show.specialshow.view.MyGridView
       android:scrollbars="none"
        android:paddingLeft="@dimen/text_size_28px"
        android:paddingRight="@dimen/text_size_28px"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:id="@+id/shop_comcard_gv"
        android:layout_marginTop="@dimen/text_size_16px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:verticalSpacing="@dimen/text_size_4px"
        android:horizontalSpacing="@dimen/text_size_16px"
        android:stretchMode="columnWidth"
        ></com.show.specialshow.view.MyGridView>
    <TextView 
        android:paddingTop="@dimen/text_size_4px"
        android:id="@+id/shop_comcard_content"
        android:paddingLeft="@dimen/text_size_28px"
        android:paddingRight="@dimen/text_size_28px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_26px"
        />
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
android:background="@color/app_line_bg"        />

</LinearLayout>