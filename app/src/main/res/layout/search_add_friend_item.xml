<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_size_10px"
        android:paddingLeft="@dimen/text_size_26px"
        android:paddingTop="@dimen/text_size_10px"

        >

        <com.show.specialshow.utils.RoundImageView
            android:id="@+id/search_add_friend_item_riv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/search_add_friend_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/text_size_26px"
            android:layout_toRightOf="@+id/search_add_friend_item_riv"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_565656" />

        <TextView
            android:id="@+id/search_add_friend_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/text_size_36px"
            android:background="@drawable/bg_dynami_attention_selecter"
            android:gravity="center"
            android:minEms="3"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="@string/addfriend"
            android:textColor="@drawable/text_attention_color_check_selector"
            android:textSize="@dimen/text_size_20px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ling_0.7"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/text_size_26px"
        android:layout_marginRight="@dimen/text_size_26px"
        android:background="@color/color_b5b5b5" />

</RelativeLayout>
