            />
        <TextView
            android:layout_marginLeft="@dimen/text_size_4px"
            android:layout_toRightOf="@id/craftsman_details_comment_name"
            android:id="@+id/craftsman_details_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/text_size_26px"
            />
        <TextView
            android:layout_marginTop="@dimen/text_size_4px"
            android:layout_below="@id/craftsman_details_comment_content"
            android:id="@+id/craftsman_details_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="01.12 15:30"
            android:textSize="@dimen/text_size_26px"
            android:textColor="@color/color_999999"
            />
    </RelativeLayout>
