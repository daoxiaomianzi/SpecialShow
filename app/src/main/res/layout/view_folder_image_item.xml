<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/folder_file_flt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/folder_file_back_iv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/plugin_camera_album_back"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/folder_file_cover_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/plugin_camera_albumbackground"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/folder_file_chose_back_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/plugin_camera_choose_back"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/folder_file_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/plugin_camera_filenum"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/folder_file_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="15sp" />
</LinearLayout>