<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_corner_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pay_password_dialog_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="提示"
        android:textColor="@color/btn_border_press"
        android:textSize="@dimen/text_size_28px" />

    <TextView
        android:id="@+id/pay_password_dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text="sdfsfsfsfsfsf"
        android:textColor="@color/btn_border_press"
        android:textSize="@dimen/text_size_24px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/text_size_16px"
        android:layout_marginRight="@dimen/text_size_16px"
        android:background="@color/app_line_bg">

    </View>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            style="@style/user_info_tv"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_marginRight="@dimen/text_size_16px"
            android:text="@string/payment_code"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_24px" />

        <EditText
            android:id="@+id/pay_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_26px" />

        <TextView
            android:id="@+id/forget_pay_password"
            style="@style/user_info_tv"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_marginRight="@dimen/text_size_16px"
            android:onClick="onClick"
            android:text="忘记?"
            android:textColor="@color/color_F15884"
            android:textSize="@dimen/text_size_26px" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/split_iv_horizontal"
            android:layout_marginLeft="@dimen/text_size_16px"
            android:layout_marginRight="@dimen/text_size_16px"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_password_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@color/btn_border_press" />

        <ImageView
            android:id="@+id/split_iv_vertical"
            style="@style/split_iv_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/pay_password_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/main_menu_text_selected" />
    </LinearLayout>

</LinearLayout>